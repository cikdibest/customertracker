@model ICollection<Microsoft.Web.WebPages.OAuth.AuthenticationClientData>
@{
    Layout = null;
}

@if (Model.Count == 0)
{
    <div class="message-info">
        <p>
            There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=252166">this article</a>
            for details on setting up this ASP.NET application to support logging in via external services.
        </p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
     
    <strong>Farklı bir servis üzerinden giriş yapabilirsiniz.</strong>
    <hr />
    <fieldset id="socialLoginList">

        <p>
            @foreach (AuthenticationClientData p in Model)
            {
                <button type="submit" class="btn" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">@p.DisplayName</button>
            }
        </p>
    </fieldset>
    }
}


