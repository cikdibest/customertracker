@{
    ViewBag.Title = "ManageCustomer";
}
<script src="~/Scripts/domain/city/cityFactory.js"></script>
<script src="~/Scripts/domain/customer/customerFactory.js"></script>
<script src="~/Scripts/domain/customer/customerController.js"></script>
<div ng-controller="customerController" ng-cloak>
    <div ng-controller="paginationController">

        <pagination total-items="totalCount" ng-model="currentPageNumber" max-size="pageSize" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages" ng-change="pageChanged()"></pagination>
        <pre>Page: {{currentPageNumber}} / {{numPages}}</pre>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                  <th style="width: 5%;">
                    <div class="btn-toolbar"><i class="btn glyphicon glyphicon-plus" ng-click="toggleAddMode()"></i></div>
                </th>
                <th style="width: 75px;">Avatar</th>
                <th>Name</th>
                <th>Abbreviation</th>
                <th>City</th>
                <th>Keywords</th>
                <th style="width: 350px">Explanation</th>
            </tr>
            <tr ng-show="addMode">
                <td>
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <i class="btn glyphicon glyphicon-save" ng-click="addCustomer()"></i>
                            <i class="btn glyphicon glyphicon-remove" ng-click="toggleAddMode()"></i>
                        </div>
                    </div>
                </td>
                <td>
                    <input ng-model="customer.AvatarImageUrl" class="col-md-12" />
                </td>
                <td>
                    <input ng-model="customer.Name" class="col-md-12" />
                </td>
                <td>
                    <input ng-model="customer.Abbreviation" class="col-md-12" />
                </td>
                <td>
                    <select ng-model="customer.CityId" ng-options="city.Id as city.Name for city in cities"></select>
                </td>
                <td>
                    <input ng-model="customer.Keywords" class="col-md-12" />
                </td>
                <td>
                    <input ng-model="customer.Explanation" class="col-md-12" />
                </td>
            </tr>
            <tr ng-repeat="customer in customers | orderBy:'Id':false">
                <td>
                    <div class="btn-toolbar" ng-show="customer.editMode == null || customer.editMode == false">
                        <div class="btn-group">
                            <i class="btn glyphicon glyphicon-edit" ng-click="toggleEditMode(customer)"></i>
                            <i class="btn glyphicon glyphicon-trash" ng-click="deleteCustomer(customer)"></i>
                        </div>
                    </div>
                    <div class="btn-toolbar" ng-show="customer.editMode == true">
                        <div class="btn-group">
                            <i class="btn glyphicon glyphicon-save" ng-click="updateCustomer(customer)"></i>
                            <i class="btn glyphicon glyphicon-remove" ng-click="toggleEditMode(customer)"></i>
                        </div>
                    </div>
                </td>
                <td>
                    <img ng-show="customer.editMode == null || customer.editMode == false" data-ng-src="{{customer.AvatarImageUrl}}" class="img-circle" width="50px" height="50px">
                    <input ng-model="customer.AvatarImageUrl" ng-show="customer.editMode == true" class="col-md-12" />
                </td>
                <td>
                    <span ng-show="customer.editMode == null || customer.editMode == false">{{customer.Name}}</span>
                    <input ng-model="customer.Name" ng-show="customer.editMode == true" class="col-md-12" />
                </td>
                <td>
                    <span ng-show="customer.editMode == null || customer.editMode == false">{{customer.Abbreviation}}</span>
                    <input ng-model="customer.Abbreviation" ng-show="customer.editMode == true" class="col-md-12" />
                </td>
                <td>
                    <span ng-show="customer.editMode == null || customer.editMode == false">{{customer.City.Name}}</span>
                    <select ng-model="customer.CityId" ng-options="city.Id as city.Name for city in cities" ng-show="customer.editMode == true"></select>
                </td>
                <td>
                    <span ng-show="customer.editMode == null || customer.editMode == false">{{customer.Keywords}}</span>
                    <input ng-model="customer.Keywords" ng-show="customer.editMode == true" class="col-md-12" />
                </td>
                <td>
                    <span ng-show="customer.editMode == null || customer.editMode == false">{{customer.Explanation}}</span>
                    <textarea ng-model="customer.Explanation" ng-show="customer.editMode == true" class="col-md-12" />
                </td>
            </tr>
        </table>

    </div>
</div>
