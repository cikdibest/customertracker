 
@using CustomerTracker.Web.Utilities.Helpers
@model  CustomerTracker.Web.Models.ViewModels.ContactViewModel
@{
    ViewBag.Title = "title"; 
}

<br />

 
@using(Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "well span8" }))
{
    <div class="row">
        <div class="span3">
            <label>Ad</label>
            <input type="text" class="span3" id="FirstName" name="FirstName" placeholder="Ad giriniz">
         
            <label>Soyad</label>
            <input type="text" class="span3" id="LastName" name="LastName" placeholder="Soyad giriniz">
            <label>Email</label>
            <input type="email" class="span3" id="Email" name="Email" placeholder="Mail giriniz">
            <label>
                Konu
             
                @Html.EnumDropDownListFor(q=>q.SubjectType,new {@required="required",@class="span3"})
			 
            </label>
        </div>
        <div class="span5">
            <label>Mesaj</label>
            <textarea  id="Message" name="Message" class="input-xlarge span5" rows="10"></textarea>
        </div>

        <button type="submit" class="btn btn-primary pull-right">Gönder</button>
    </div>

}

 
