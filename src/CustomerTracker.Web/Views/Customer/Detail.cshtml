@model CustomerTracker.Web.Models.CustomerDetailModel

@{
    ViewBag.Title = "title";
}
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<!-- JavaScrip Search Plugin -->
<script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
<link href="~/Content/customerdetail.css" rel="stylesheet" />

<nav class="navbar navbar-inverse container" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">@Model.CustomerTitle</a>
        </div>


    </div>
    <!-- /.container-fluid -->
</nav>


<div class="container well">
    <ul class="nav nav-pills nav-stacked col-md-2">
        <li class="active"><a href="#tab_a" data-toggle="pill">Ön Bilgi</a></li>
        <li><a href="#tab_c" data-toggle="pill">İletişim</a></li>
        <li><a href="#tab_d" data-toggle="pill">Uzak Bağlantı</a></li>
    </ul>
    <div class="tab-content col-md-10 well">
        <div class="tab-pane active" id="tab_a">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Ön Bilgi</h3>
                </div>
                <div class="panel-body">
                    <div class="row-fluid">
                        <div class="span3">
                            <img class="img-circle"
                                src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100"
                                alt="User Pic">
                        </div>
                        <div class="span6">
                            <br />
                            <table class="table table-condensed table-responsive table-user-information">
                                <tbody>
                                    <tr>
                                        <td>Ünvan:</td>
                                        <td>@Model.CustomerTitle</td>
                                    </tr>
                                    <tr>
                                        <td>Şehir</td>
                                        <td>@Model.CityName</td>
                                    </tr>
                                    <tr>
                                        <td>Açıklama</td>
                                        <td>@Model.Explanation</td>
                                    </tr>
                                    <tr>
                                        <td>Ürünler</td>
                                        <td>
                                           @foreach (var product in @Model.Products)
                                           {
                                                <button type="button" class="btn btn-danger">@product.Name</button>
                                           }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_c">
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">İletişim kurulabilecek kişiler</span>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="input-group c-search">
                            <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                            </span>
                        </div>
                    </div>
                </div>

                <ul class="list-group" id="contact-list">
                    @foreach (var communication in Model.Communications)
                    {
                        <li class="list-group-item">
                            <div class="col-xs-12 col-sm-3">
                                <img src="http://api.randomuser.me/portraits/men/49.jpg" alt="Scott Stevens" class="img-responsive img-circle" />
                            </div>
                            <div class="col-xs-12 col-sm-9">
                                <span class="name">@communication.FullName</span><br />
                                <table class="table table-condensed table-responsive table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Görev</td>
                                            <td>@communication.DepartmentName</td>
                                        </tr>
                                        <tr>
                                            <td>Cinsiyet</td>
                                            <td>@communication.GenderName</td>
                                        </tr>
                                        <tr>
                                            <td>Telefon</td>
                                            <td>@communication.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td>@communication.Email</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="clearfix"></div>
                        </li> 
                    }

                </ul>
            </div>
        </div>
        <div class="tab-pane" id="tab_d">
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">Uzak bağlantı bilgileri</span>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="input-group c-search">
                            <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                            </span>
                        </div>
                    </div>
                </div>

                <ul class="list-group" id="contact-list">
                    @foreach (var remoteMachine in Model.RemoteMachines)
                    {
                        <li class="list-group-item">
                            <div class="col-xs-12 col-sm-3">
                                <img src="http://api.randomuser.me/portraits/men/49.jpg" alt="Scott Stevens" class="img-responsive img-circle" />
                            </div>
                            <div class="col-xs-12 col-sm-9">
                                <span class="name">@remoteMachine.Name</span><br />
                                <table class="table table-condensed table-responsive table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Bağlantı Tipi</td>
                                            <td>@remoteMachine.RemoteConnectionType</td>
                                        </tr>
                                        <tr>
                                            <td>Adres(ip/url)</td>
                                            <td>@remoteMachine.RemoteAddress</td>
                                        </tr>
                                        <tr>
                                            <td>Kullanıcı Adı</td>
                                            <td>@remoteMachine.Username</td>
                                        </tr>
                                        <tr>
                                            <td>Şifre</td>
                                            <td>@remoteMachine.Password</td>
                                        </tr>
                                        <tr>
                                            <td>Açıklama</td>
                                            <td>@remoteMachine.Explanation</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="clearfix"></div>
                        </li> 
                    }

                </ul>
            </div>
        </div>
        <!-- tab content -->

    </div>

</div>

<link href="~/Content/chosen.css" rel="stylesheet" />
<script src="~/Scripts/chosen.jquery.min.js"></script>
<script>
    

    $(function () {

        $('#contact-list').searchable({
            searchField: '#contact-list-search',
            selector: 'li',
            childSelector: '.col-xs-12',
            show: function (elem) {
                elem.slideDown(100);
            },
            hide: function (elem) {
                elem.slideUp(100);
            }
        });
    });

</script>
