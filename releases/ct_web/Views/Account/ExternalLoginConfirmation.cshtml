@model CustomerTracker.Web.Models.ViewModels.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<br />
<p>
    <strong>@ViewBag.ProviderDisplayName</strong> kimlik doğrulamanız başarılı bir şekilde yapıldı.
    <br />
    <br />
    Lütfen aşağıdaki bilgileri doldurarak kayıt işlemini tamamlayınız.
</p>
<hr />
@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="span3">

        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li class="name">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.FirstName)
            </li>
            <li class="name">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.LastName)
            </li>
            <li class="name">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
        </ol>

        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="İşlemi Tamamla" class="btn pull-right" />

    </div>
}

